<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--导航栏底色-->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--状态栏底色-->
        <item name="colorPrimary">@color/primary</item>
        <!--按钮选中或者点击获得焦点后的颜色-->
        <item name="colorAccent">@color/accent</item>
        <!--和 colorAccent相反，正常状态下按钮的颜色-->
        <item name="colorControlNormal">@android:color/white</item>

        <!--EditText 输入框中字体的颜色-->

    </style>
    <style name="toolBarTheme" parent="Theme.AppCompat.Light">


        <!-- colorPrimary 定义 ActionBar 的背景色 -->
        <item name="colorPrimary">@color/primary</item>

        <!-- colorPrimaryDark 定义状态栏的背景色 -->
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <!-- colorAccent 为 colorControlActivated 的默认值，该值用户显示控件的高亮状态 -->
        <item name="colorAccent">@color/accent</item>
        <item name="color">@color/icons</item>
    </style>
</resources>
